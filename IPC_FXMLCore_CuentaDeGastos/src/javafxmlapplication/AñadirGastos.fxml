<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.MenuGastosDialogController" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    
    <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    
    <Label text="Costo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="costField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    
    <Label text="Unidades:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="unitsField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    
    <Label text="Fecha:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dateField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    
    <Label text="Categoría:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    
    <Label text="Imagen del recibo:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
        <ImageView fx:id="receiptImageView" fitHeight="100" fitWidth="100"/>
        <Button text="Subir Imagen" onAction="#handleUploadImage"/>
    </HBox>
    
    <Button text="Añadir Gasto" onAction="#handleAddGasto" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
</GridPane>

